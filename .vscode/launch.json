    "version": "0.2.0",
    "configurations": [
        {
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "name": "附加到Node",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        
        {
            "name": "开发启动",
            "request": "launch",
            "runtimeArgs": [
                "start:dev"
            ],
            "runtimeExecutable": "pnpm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "name": "生产启动",
            "request": "launch",
            "runtimeArgs": [
                "start"
            ],
            "runtimeExecutable": "pnpm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "npm: build",
            "console": "integratedTerminal"
        },
    ]
}